{
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
        // Optional: Disable snippets, as they conflict with completion ranking.
        "editor.snippetSuggestions": "none",
    },
    "gopls": {
        // Add parameter placeholders when completing a function.
        "usePlaceholders": true,
        // If true, enable additional analyses with staticcheck.
        // Warning: This will significantly increase memory usage.
        "staticcheck": false,
    },
    "[go.mod]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "files.eol": "\n",
    "editor.fontFamily": "'Bitstream Vera Sans Mono', 'Menlo', 'Monaco', monospace",
    "markdown-preview-enhanced.previewTheme": "github-dark.css",
    "editor.tabSize": 2,
    "files.insertFinalNewline": true,
    "editor.renderControlCharacters": true,
    "window.zoomLevel": 0,
    "vsnotes.defaultNotePath": "~/junk",
    "vsnotes.defaultNoteTitle": "{dt}/{prefix}-{title}",
    "vsnotes.tokens": [
        {
            "type": "datetime",
            "token": "{dt}",
            "format": "YYYY-MM",
            "description": "Insert formatted datetime."
        },
        {
            "type": "datetime",
            "token": "{prefix}",
            "format": "DD-HHmmss",
            "description": "Insert formatted datetime for prefix."
        },
        {
            "type": "title",
            "token": "{title}",
            "description": "Insert note title from input box.",
            "format": "Untitled"
        },
    ],
    "git.enableStatusBarSync": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#151515",
        "statusBar.noFolderBackground": "#151515",
        "statusBar.debuggingBackground": "#151515",
        "statusBarItem.remoteBackground": "#252525",
        "statusBarItem.remoteForeground": "#e5e5e5",
    },
    "editor.renderWhitespace": "all",
    "editor.minimap.enabled": false,
    "git.ignoreLegacyWarning": true,
    "workbench.colorTheme": "GitHub Dark",
}
